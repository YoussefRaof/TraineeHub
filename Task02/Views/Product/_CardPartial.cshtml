@model Product
<div class="card" style="width: 18rem;">
    <a asp-action="Details" asp-route-id="@Model.Id">  <img src="~/images/@Model.Image" class="card-img-top" alt="..."> </a>
    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
        <p class="card-text">@Model.Description</p>
        <p class="card-text">Price: <strong>@Model.Price</strong></p>
        <a href="" class="btn btn-primary"> Order By @Model.Customer.Name</a>
    </div>
</div>