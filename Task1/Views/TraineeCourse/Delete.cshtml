@model Task01.Models.TraineeCourse

@{
    ViewData["Title"] = "Delete Trainee Course Grade";
    SelectList trainess = new SelectList(ViewBag.Trainess, "Id", "Name");
    SelectList courses = new SelectList(ViewBag.Courses, "Id", "Topic");
}

<h1 class="text-center mt-3 text-danger">Delete Trainee Course Grade</h1>
<hr />

<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Delete">
            <div asp-validation-summary="All" class="alert alert-danger"></div>

            <input type="hidden" asp-for="TraineeId" />
            <input type="hidden" asp-for="CourseId" />

            <div class="form-group mb-3">
                <label class="form-label fw-bold">Trainee Name</label>
                <input class="form-control" value="@trainess.FirstOrDefault(t => t.Value == Model.TraineeId.ToString())?.Text" readonly />
            </div>

            <div class="form-group mb-3">
                <label class="form-label fw-bold">Course Name</label>
                <input class="form-control" value="@courses.FirstOrDefault(c => c.Value == Model.CourseId.ToString())?.Text" readonly />
            </div>

            <div class="form-group mb-3">
                <label asp-for="Grade" class="form-label fw-bold">Grade</label>
                <input asp-for="Grade" class="form-control" readonly />
            </div>

            <div class="alert alert-warning text-center">Are you sure you want to delete this record?</div>

            <div class="form-group text-center">
                <button type="submit" class="btn btn-danger shadow">
                    <i class="fas fa-trash-alt"></i> Delete
                </button>
                <a class="btn btn-secondary shadow" asp-action="Index">
                    <i class="fas fa-arrow-left"></i> Cancel
                </a>
            </div>
        </form>
    </div>
</div>
