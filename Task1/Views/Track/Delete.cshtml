@model Task01.Models.Track

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-danger">Delete Track</h1>
<h4 class="text-muted">Are you sure you want to delete this track?</h4>
<hr />

<div class="card shadow-lg p-4 mb-4 bg-white rounded">
    <div class="card-body">
        <h5 class="card-title text-primary">@Model.Name</h5>
        <p class="card-text"><strong>Description:</strong> @Model.Description</p>
    </div>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />

    <div class="d-flex gap-3">
        <button type="submit" class="btn btn-danger btn-lg shadow">
            <i class="fas fa-trash"></i> Delete
        </button>
        <a asp-action="Index" class="btn btn-secondary btn-lg shadow">
            <i class="fas fa-arrow-left"></i> Cancel
        </a>
    </div>
</form>
