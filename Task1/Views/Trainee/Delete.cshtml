@model Task01.Models.Trainee

@{
    ViewData["Title"] = "Delete Trainee";
}

<h1 class="text-center text-danger mt-3">Delete Trainee</h1>

<div class="card shadow-lg border-0 mt-4">
    <div class="card-header bg-danger text-white">
        <h4 class="mb-0"><i class="fas fa-trash-alt"></i> Confirm Deletion</h4>
    </div>
    <div class="card-body">
        <p class="text-danger fw-bold">Are you sure you want to delete this trainee?</p>

        <dl class="row">
            <dt class="col-sm-3">Name:</dt>
            <dd class="col-sm-9">@Model.Name</dd>

            <dt class="col-sm-3">Gender:</dt>
            <dd class="col-sm-9">@Model.Gender</dd>

            <dt class="col-sm-3">Email:</dt>
            <dd class="col-sm-9">@Model.Email</dd>

            <dt class="col-sm-3">Mobile Number:</dt>
            <dd class="col-sm-9">@Model.MobileNum</dd>

            <dt class="col-sm-3">Birthdate:</dt>
            <dd class="col-sm-9">@Model.Birthdate.ToString("yyyy-MM-dd")</dd>

            <dt class="col-sm-3">Track:</dt>
            <dd class="col-sm-9">@Model.Trk?.Name</dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />

            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-danger shadow">
                    <i class="fas fa-trash-alt"></i> Delete
                </button>
                <a class="btn btn-secondary shadow" asp-action="Index">
                    <i class="fas fa-arrow-left"></i> Cancel
                </a>
            </div>
        </form>
    </div>
</div>
