@model Task01.Models.Course

@{
    ViewData["Title"] = "Course Details";
}

<div class="card shadow-lg border-0 rounded-4 mt-4">
    <div class="card-header bg-info text-white text-center fw-bold fs-4">
        📘 Course Details
    </div>
    <div class="card-body p-4">
        <dl class="row">
            <dt class="col-sm-3 fw-bold">
                @Html.DisplayNameFor(model => model.Topic)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Topic)
            </dd>

            <dt class="col-sm-3 fw-bold">
                @Html.DisplayNameFor(model => model.Grade)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Grade)
            </dd>
        </dl>
    </div>
    <div class="card-footer d-flex justify-content-between">
        <a class="btn btn-warning btn-sm shadow" asp-action="Edit" asp-route-id="@Model.Id">
            <i class="fas fa-edit"></i> Edit
        </a>
        <a class="btn btn-secondary btn-sm shadow" asp-action="Index">
            <i class="fas fa-arrow-left"></i> Back to List
        </a>
    </div>
</div>
