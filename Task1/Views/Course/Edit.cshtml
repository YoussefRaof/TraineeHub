@model Task01.Models.Course

@{
    ViewData["Title"] = "Edit Course";
}

<div class="card shadow-lg border-0 rounded-4 mt-4">
    <div class="card-header bg-info text-white text-center fw-bold fs-4">
        ✏️ Edit Course
    </div>
    <div class="card-body p-4">
        <form asp-action="Edit">
            <div asp-validation-summary="All" class="alert alert-danger d-none"></div>

            <div class="mb-3">
                <label asp-for="Topic" class="form-label fw-bold"></label>
                <input asp-for="Topic" class="form-control border-info shadow-sm" />
                <span asp-validation-for="Topic" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Grade" class="form-label fw-bold"></label>
                <input asp-for="Grade" type="number" step="0.1" class="form-control border-info shadow-sm" />
                <span asp-validation-for="Grade" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-primary shadow">
                    <i class="fas fa-save"></i> Edit
                </button>
                <a class="btn btn-secondary shadow" asp-action="Index">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
