@model Task01.Models.Course

@{
    ViewData["Title"] = "Delete Course";
}

<div class="card shadow-lg border-0 rounded-4 mt-4">
    <div class="card-header bg-danger text-white text-center fw-bold fs-4">
        ❌ Delete Course
    </div>
    <div class="card-body p-4">
        <h5 class="text-center text-danger">Are you sure you want to delete this course?</h5>
        <hr />

        <dl class="row">
            <dt class="col-sm-3 fw-bold">Topic Name:</dt>
            <dd class="col-sm-9">@Model.Topic</dd>

            <dt class="col-sm-3 fw-bold">Total Grade:</dt>
            <dd class="col-sm-9">@Model.Grade</dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <div class="d-flex justify-content-between mt-3">
                <button type="submit" class="btn btn-danger shadow">
                    <i class="fas fa-trash-alt"></i> Delete
                </button>
                <a class="btn btn-secondary shadow" asp-action="Index">
                    <i class="fas fa-arrow-left"></i> Cancel
                </a>
            </div>
        </form>
    </div>
</div>

